<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deepika.mortgagecalculator.MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/propertyprice"
        android:hint="Property Price" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/propertyprice"
        android:layout_alignRight="@+id/propertyprice"
        android:layout_alignEnd="@+id/propertyprice"
        android:id="@+id/downpayment"
        android:hint="downpayment" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/downpayment"
        android:layout_alignRight="@+id/downpayment"
        android:layout_alignEnd="@+id/downpayment"
        android:id="@+id/rate"
        android:hint="Annual Rate of Interest" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/rate"
        android:layout_alignLeft="@+id/rate"
        android:layout_alignStart="@+id/rate"
        android:id="@+id/period"
        android:hint="Number of years" />

    <TextView
        android:text="Property Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/period"
        android:layout_alignLeft="@+id/period"
        android:layout_alignStart="@+id/period"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/period"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/street"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="11dp"
        android:hint="Street" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/city"
        android:hint="City"
        android:layout_below="@+id/street"
        android:layout_alignLeft="@+id/street"
        android:layout_alignStart="@+id/street" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/state"
        android:layout_below="@+id/city"
        android:layout_alignRight="@+id/city"
        android:layout_alignEnd="@+id/city"
        android:layout_alignLeft="@+id/city"
        android:layout_alignStart="@+id/city" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/state"
        android:layout_alignLeft="@+id/state"
        android:layout_alignStart="@+id/state"
        android:id="@+id/zip"
        android:hint="Zip Code" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zip"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="14dp"
        android:id="@+id/text_monthly_payment" />

    <Button
        android:text="Calculate Mortgage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_monthly_payment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bcalculate"
        android:layout_toLeftOf="@+id/text_monthly_payment"
        android:layout_toStartOf="@+id/text_monthly_payment" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bsave"
        android:layout_alignBottom="@+id/bcalculate"
        android:layout_toRightOf="@+id/bcalculate"
        android:layout_toEndOf="@+id/bcalculate" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bclear"
        android:layout_alignBaseline="@+id/bsave"
        android:layout_alignBottom="@+id/bsave"
        android:layout_toRightOf="@+id/bsave"
        android:layout_toEndOf="@+id/bsave" />


</RelativeLayout>
